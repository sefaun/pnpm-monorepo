{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"lib": [ "ESNext" ],
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "**/*"
  ]
}